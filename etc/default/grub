GRUB_DISTRIBUTOR="!"

# Default menu entry
GRUB_DEFAULT=0

# Boot the default entry this many seconds after the menu is displayed
GRUB_TIMEOUT=0
GRUB_TIMEOUT_STYLE=countdown

# Append parameters to the linux kernel command line
# Security GRUB CMDLINE Options
GRUB_CMDLINE_LINUX="acpi_irq_nobalance acpi_no_memhotplug acpi_no_watchdog align_va_addr=on apic_extnmi=none apparmor=0 atkbd.set=3 atkbd.softraw=0 audit=0 consoleblank=0 cpuidle.governor=menu cryptomgr.notests no_debug_objects hardened_usercopy=on hpet=disable hpet_mmap=1 dma_debug=off edac_report=off hardlockup_all_cpu_backtrace=0 hugetlb_free_vmemmap=on hung_task_panic=1 i8042.noloop i8042.nomux i8k.restricted init_on_alloc=1 init_on_free=1 iommu.strict=1 iommu.passthrough=0 kmemleak=off kvm.nx_huge_pages=auto l1d_flush=on l1tf=full,force loglevel=0 log_buf_len=12 logo.nologo mds=full,nosmt memory_corruption_check=1 mem_encrypt=on mitigations=auto,nosmt mmio_stale_data=full,nosmt module.sig_enforce mousedev.tap_time=5000 nmi_watchdog=0 no_file_caps nohz=on nosoftlockup nowatchdog oops=panic page_alloc.shuffle=1 page_poison=on pci=pcie_bus_safe pnp.debug=0 preempt=full printk.devkmsg=off psi=0 psmouse.rate=100 pti=auto quiet random.trust_cpu=off randomize_kstack_offset=1 retbleed=auto,nosmt schedstats=enable selinux=0 slab_nomerge slub_debug=ZFP slub_nomerge softlockup_all_cpu_backtrace=0 spectre_v2=auto spectre_v2_user=auto spec_store_bypass_disable=auto threadirqs transparent_hugepage=always tsx=off tsx_async_abort=full,nosmt tsc=nowatchdog usbcore.authorized_default=1 usbhid.mousepoll=10 usbhid.jspoll=10 usbhid.kbpoll=10 vdso=0 vdso32=0 video=640x480@60 vsyscall=none vt.default_utf8=0 workqueue.power_efficient=Y ahci.mobile_lpm_policy=3 ipv6.disable=1 ipv6.disable_ipv6=1 mac80211.ieee80211_default_rc_algo= pcie_aspm.policy=powersupersave rcu_nocb_poll rcutree.rcu_fanout_leaf=16 rcutree.kthread_prio=85 rcutree.rcu_resched_ns=100000 rcupdate.rcu_expedited=0 rcupdate.rcu_normal=1 rcupdate.rcu_normal_after_boot=0"
# Performance GRUB CMDLINE Options
